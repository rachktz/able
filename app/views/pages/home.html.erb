
<div class="container container-body">
	<% if user_signed_in? %>
		<%= render "layouts/measures"%>
	<% else %>	
		<div class="intro-text">
			<h1>Welcome to Able</h1>
		</div>
		<div class="jumbotron center">	
			<%= form_for(:user, :url => session_path(:user)) do |f| %>
				<div class="form-group">
			        <!--<%= f.label :email %>-->
			        <%= f.email_field :email, autofocus: true, class: "form-control" %>
			    </div>

				<div class="form-group">
			        <!--<%= f.label :password %>-->
			        <%= f.password_field :password, class: "form-control" %>
			    </div>

				<!-- <%= f.check_box :remember_me %>
				<%= f.label :remember_me %> -->

				<div class="form-group">
					<%= f.submit 'Log in', class: "btn btn-primary btn-lg" %>
				</div>

				<p><%= link_to "Forgot your password?", new_password_path(:user) %> </p>
				
				<!--<%= link_to "Sign up", new_registration_path(:user) %>-->
			<% end %>
		</div>
		<div class="disclaimer">
			<p><%= link_to "Able is HIPAA compliant", help_path %></p>
		</div>
	<% end %>
</div>